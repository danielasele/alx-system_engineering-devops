#!/usr/bin/env bash
# This script changes the IP address mappings for localhost and facebook.com

# Ensure script is running with root privileges
if [[ $EUID -ne 0 ]]; then
    echo "Please run this script with sudo or as root" 
    exit 1
fi

# Modify /etc/hosts file to change IP address mappings
sed -i 's/127.0.0.1/127.0.0.2/g' /etc/hosts
sed -i 's/8.8.8.8/facebook.com/g' /etc/hosts

# Display success message
echo "IP addresses changed successfully!"
